if (!requireNamespace("BiocManager", quietly = TRUE))
  install.packages("BiocManager")

BiocManager::install("Biostrings")
library(Biostrings)


dna_seq = DNAString("")
dna_seq

#Length of sequence
length(dna_seq)

#Nucleotide frequencies
letterFrequency(dna_seq, c("A", "T", "G", "C"))

#GC content (%)
letterFrequency(dna_seq, "GC", as.prob=TRUE) * 100


#Reverse complement (important in genomics)
reverseComplement(dna_seq)


#Translate DNA â†’ Protein
translate(dna_seq)


##################VIZUALIZATION##################

#plot the nucleotide frequencies
freqs <- letterFrequency(dna_seq, c("A","T","G","C"))
barplot(freqs, main="Nucleotide Frequencies", col=c("blue","red","green","orange"))

#Save Results
write.csv(as.data.frame(freqs), "nucleotide_frequencies.csv")
